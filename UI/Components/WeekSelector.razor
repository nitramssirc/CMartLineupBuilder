@using Application.Commands.AddWeek;
@using Application.Queries.GetWeeks;

<RadzenDropDown @bind-Value="SelectedWeekID" Data="Weeks" ValueProperty="ID"
                Placeholder="Select Week" Change="OnSelectedWeekChanged" >
    <Template>
        Week @((context as Week)?.WeekNumber)
    </Template>
</RadzenDropDown>
<RadzenButton Click=@(args => OnAddWeekClick()) Text="New Week"
              ButtonStyle="Radzen.ButtonStyle.Primary" />


